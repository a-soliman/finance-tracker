<div id="results">
  <% if @stock %>
    <div class="card card-header d-flex flex-row justify-content-evenly align-items-center mt-5">
      <strong>Symbol: </strong> <%= @stock.ticker %>
      <strong>Name: </strong> <%= @stock.name %>
      <strong>Price: </strong> <%= @stock.price %>
      <% if current_user.can_track_stock?(@stock.ticker) %>
        <%= link_to  "Add to portfolio", user_stocks_path(ticker: @stock.ticker),  data: { turbo_method: :post }, class: "btn btn-sm btn-outline-success" %>
      <% else %>
        <span class="badge text-bg-secondary">You are already tracking 
          <% if !current_user.under_stock_limit? %>
            10 stocks
          <% else %>
            this stock
          <% end %>
        </span>
      <% end %>
    </div>
  <% end %>
</div>
