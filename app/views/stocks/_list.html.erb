<% if stocks %>
<table class="table table-bordered table-hover my-5">
  <thead>
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% stocks.each do |stock|%>
      <tr>
        <th scope="row"><%= stock.ticker %></th>
        <td><%= stock.name %></td>
        <td><%= stock.price %></td>
        <td>Todo</td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>